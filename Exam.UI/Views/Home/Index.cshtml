@model List<Slider>
@{
    int counter = 0;
}
<!-- ======= Hero Section ======= -->
<section id="hero">
    <div class="hero-container">
        <div id="heroCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">

            <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

            <div class="carousel-inner" role="listbox">

                <!-- Slide 1 -->
                @foreach (var item in Model.Where(x=>x.IsDeleted == false))
                {
                    
                    <div class="carousel-item active" style="background-image: url(uploads/sliders/@item.BackgroundImg);">
                        <div class="carousel-container">
                            <div class="carousel-content">
                                <h2 class="animate__animated animate__fadeInDown">@item.Title</h2>
                                <p class="animate__animated animate__fadeInUp">@item.Description</p>
                                <a href="@item.RedirctUrl" class="btn-get-started scrollto animate__animated animate__fadeInUp">@item.ButtonText</a>
                            </div>
                        </div>
                    </div>
                }

               

            <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon ri-arrow-left-line" aria-hidden="true"></span>
            </a>

            <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon ri-arrow-right-line" aria-hidden="true"></span>
            </a>

        </div>
    </div>
</section><!-- End Hero -->
