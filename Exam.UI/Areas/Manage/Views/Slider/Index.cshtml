@using Exam.Core.Models;

@model List<Slider>
@{
    int counter = 0;
}

<div>
    <h1>Create Slider</h1>
    <a asp-controller="slider" asp-action="create" class="btn btn-primary ">Create</a>
</div>

<table class="table" style="overflow:scroll;max-width:1000px;">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Desciption</th>
            <th scope="col">RedirctUrl</th>
            <th scope="col">Button-Text</th>
            <th scope="col">ImageUrl</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.RedirctUrl</td>
                <td>@item.ButtonText</td>
                <td>@item.BackgroundImg</td>
                <td>
                    <a asp-controller="slider" asp-action="update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                    <a asp-controller="slider" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
</table>